    <script type="text/javascript">


	function validate() {
	var txt =	document.getElementById('usr').value;
	    var num=txt.charCodeAt(0);
		var num1=txt.charCodeAt(1);
		var num2=txt.charCodeAt(2);
		var Numbr=txt.charCodeAt(3);

		if(txt==""){
			alert("Please Enter Flight ID");
		}
		else{

		if(((num>=65 && num<=90) || (num>=97 && num<=122)) &&
		(Numbr>=48 && Numbr<=57) &&
		((num1>=65 && num1<=90) || (num1>=97 && num1<=122)) &&
		 ((num2>=65 && num2<=90) || (num2>=97 && num2<=122)))
		{
			alert("Incorrect Flight ID");
		}
	}
}

      function initialize() {
		  var myimage='mm2.png';
		    var iconbase='https://maps.google.com/mapfiles/kml/shapes/';
			var myLatLng = new google.maps.LatLng (-25.363882, 131.044922);
        var mapOptions = {
          center: myLatLng,
          zoom: 8
        };

        var map = new google.maps.Map(document.getElementById('map'),
            mapOptions);
		var marker =  new google.maps.Marker ({
			position: myLatLng,
			 map: map,
			 animation: google.maps.Animation.BOUNCE,
			 icon: myimage,
			title: 'hello'
			});
      }


      google.maps.event.addDomListener(window, 'load', initialize);
    </script>

