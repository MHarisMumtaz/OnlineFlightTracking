                        <form role="form">
                            <div class="form-group">
                                <label style="display:inline; width:10%;" for="usr">Flight No.</label>
                                <input style="width:50%; display:inline;" class="form-control" id="usr" type="text" maxlength="7" value="" />
                                <button type="submit" class="btn btn-primary" style="display:inline;" onclick="validate()">Info</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
